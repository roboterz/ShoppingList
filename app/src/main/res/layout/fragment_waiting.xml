<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WaitingListFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_waitingList"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:menu="@menu/menu_main"
        app:title="@string/shopping_list"
        app:titleCentered="true"
        tools:ignore="MissingConstraints"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_waitingList"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_WaitingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabWaiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/baseline_add_24"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>